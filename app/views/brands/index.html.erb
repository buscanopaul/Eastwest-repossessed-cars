<p id="notice"><%= notice %></p>


<% if current_user.present? %>
  <% if current_user.issuperadmin? || current_user.isadmin? %>
    <h1>Brands</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Added by User</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= brand.user.first_name %> <%= brand.user.last_name %></td>
            <td><%= image_tag brand.image_url if brand.image %></td>
            <td><%= link_to "Show", brand %></td>

            <% if current_user.present? %>
              <% if current_user.issuperadmin? || current_user.isadmin? %>
                <td><%= link_to "Edit", edit_brand_path(brand) %></td>
                <td><%= link_to "Destroy", brand, method: :delete, data: { confirm: "Are you sure?" } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  <% end %>
<% end %>
<% if current_user.present? %>
  <% if current_user.issuperadmin? || current_user.isadmin? %>
    <%= link_to "New Brand", new_brand_path %>
  <% end %>
<% end %>

<section id="carsTitle">
  <h1>Explore Brands</h1>
  <p>We make owning a car easy and affordable. <br> Check out our high-quality used cars for sale.</p>
</section>

<section id="carsList">
  <div class="container">
    <div class="row">
      <div class="d-flex justify-content-left bd-highlight mb-3 flex-wrap cars-container">
        
        <% @brands.each do |brand| %>
            <div class="p-2 bd-highlight w-25 pre-card">
              <div class="card">
                <div class="cars-list-image" style="
          background-image: url(<%= brand.image_url %>);
          height: 250px;
          background-position: center;
          background-repeat: no-repeat;
          background-size: contain;
          background-color: black;
      "></div>
                <div class="card-body text-center">
                  <h5 class="card-title"><%= brand.name %></h5>
                  <%= link_to "Explore", brand, class: "btn btn-primary text-white bg-purple text-center" %>
                </div>
              </div>
            </div>
        <% end %>
      
      </div>
    </div>
  </div>
</section>
