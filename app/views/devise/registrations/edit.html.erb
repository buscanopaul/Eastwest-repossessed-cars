<div class="container text-center login">
  <div class="row">
  <h2 class="mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :disabled => true, class: "form-control mb-3", placeholder: "Email" %>
    </div>

    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :disabled => true, class: "form-control mb-3", placeholder: "First name" %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, autocomplete: "first_name", :disabled => true, class: "form-control mb-3", placeholder: "Last name" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group" style="text-align: left !important; color:gray; font-size: 13px;">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", placeholder: "Password" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group" style="text-align: left !important; color:gray; font-size: 13px;">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", placeholder: "Confirm password" %>
    </div>

    <div class="form-group" style="text-align: left !important; color:gray; font-size: 13px;">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mb-3", placeholder: "Current password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary text-white bg-purple w-100" %>
    </div>
  <% end %>

  <p class="text-white">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary text-white bg-purple w-100" %></p>

  </div>
</div>