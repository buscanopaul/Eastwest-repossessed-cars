<div class="container text-center login">
  <div class="row">
    <h2 class="mb-4">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="orm-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: "Email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary text-white bg-purple w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>