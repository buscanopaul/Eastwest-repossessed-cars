<header>
<div class="container-fluid border-bottom">
    <div class="container mt-2">
    <header id="mainHeader" class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-2">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
         <%= image_tag "logo.png", alt: "Eastwest", style: "height: 40px;width:auto;" %>
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to "Cars", cars_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to "Brands", brands_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to "Types", brands_path, class: "nav-link px-2 link-dark" %></li>
        <% if user_signed_in? %>
             <% if current_user.issuperadmin? || current_user.isadmin? %>
                <li><%= link_to "Offers", offers_path, class: "nav-link px-2 link-dark" %></li>
             <% else %>
                <li><%= link_to "My Offers", offers_path, class: "nav-link px-2 link-dark" %></li>
             <% end %>
            <% if current_user.issuperadmin? %>
                <li><%= link_to "Users", users_path, class: "nav-link px-2 link-dark" %></li>
            <% end %>
        <% end %>
      </ul>

      <div class="col-md-3 text-end right-account">
         <% if user_signed_in? %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn me-2" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary text-white bg-purple" %>
        <% else %>
            <%= link_to "Log in", new_user_session_path, class: "btn  me-2" %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary text-white bg-purple" %>
        <% end %>
      </div>
    </header>
  </div>
</div>
</header>